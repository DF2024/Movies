generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Movie {
  id          Int       @id @default(autoincrement())
  title       String
  year        Int?
  duration    Int?
  description String?
  posterUrl   String?
  rating      Float     @default(0)
  ratingsCount Int      @default(0)

  // Relaciones
  genres   MovieGenre[]
  cast     MovieActor[]
  reviews  Review[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Genre {
  id     Int           @id @default(autoincrement())
  name   String
  movies MovieGenre[]
}

model Actor {
  id     Int           @id @default(autoincrement())
  name   String
  photoUrl String?
  movies MovieActor[]
}

model MovieGenre {
  movieId Int
  genreId Int

  movie Movie @relation(fields: [movieId], references: [id])
  genre Genre @relation(fields: [genreId], references: [id])

  @@id([movieId, genreId])
}

model MovieActor {
  movieId Int
  actorId Int

  movie Movie @relation(fields: [movieId], references: [id])
  actor Actor @relation(fields: [actorId], references: [id])

  @@id([movieId, actorId])
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  email    String   @unique
  password String
  role     String   @default("user")
  reviews  Review[]
}

model Review {
  id        Int      @id @default(autoincrement())
  rating    Int
  comment   String?
  movieId   Int
  userId    Int
  createdAt DateTime @default(now())

  movie Movie @relation(fields: [movieId], references: [id])
  user  User  @relation(fields: [userId], references: [id])
}